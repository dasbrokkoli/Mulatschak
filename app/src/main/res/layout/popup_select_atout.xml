<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="itp.project.Popups.PopupSelectAtout"
        android:screenOrientation="landscape">

    <ImageView
            android:layout_width="56dp"
            android:layout_height="56dp" app:srcCompat="@drawable/eye" android:id="@+id/eyeBtn"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" android:layout_marginTop="16dp"/>
    <TextView
            android:text="@string/selectAtout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:id="@+id/select"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="16dp" android:textSize="30sp"/>
    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@android:drawable/checkbox_on_background"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="16dp" android:id="@+id/best"/>
    <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp" app:srcCompat="@drawable/blatt"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/blatt" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/eiche"/>
    <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp" app:srcCompat="@drawable/eiche"
            android:id="@+id/eiche" app:layout_constraintStart_toEndOf="@+id/blatt" android:layout_marginStart="20dp"
            app:layout_constraintTop_toTopOf="@+id/blatt" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/herz"/>
    <ImageView
            android:layout_width="65dp"
            android:layout_height="73dp" app:srcCompat="@drawable/herz" android:id="@+id/herz"
            app:layout_constraintTop_toTopOf="@+id/eiche" app:layout_constraintStart_toEndOf="@+id/eiche"
            android:layout_marginStart="16dp" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/schelle"/>
    <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp" app:srcCompat="@drawable/schelle"
            android:id="@+id/schelle" app:layout_constraintTop_toTopOf="@+id/herz"
            app:layout_constraintStart_toEndOf="@+id/herz" android:layout_marginStart="16dp"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>