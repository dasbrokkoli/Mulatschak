<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="itp.project.popups.PopupCard6"
        android:screenOrientation="landscape">

    <ImageView
            android:layout_width="80dp"
            android:layout_height="100dp" android:id="@+id/card4"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/card5" app:layout_constraintTop_toBottomOf="@+id/card1"
            android:layout_marginTop="16dp"/>
    <ImageView
            android:layout_width="80dp"
            android:layout_height="100dp" android:id="@+id/card1"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/card2"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.102"/>
    <ImageView
            android:layout_width="80dp"
            android:layout_height="100dp" android:id="@+id/card3"
            app:layout_constraintStart_toEndOf="@+id/card2" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="@+id/card1"/>
    <ImageView
            android:layout_width="80dp"
            android:layout_height="100dp" android:id="@+id/card6"
            app:layout_constraintStart_toEndOf="@+id/card5" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="@+id/card4"/>
    <ImageView
            android:layout_width="80dp"
            android:layout_height="100dp" android:id="@+id/card5"
            app:layout_constraintStart_toEndOf="@+id/card4" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/card6" app:layout_constraintTop_toTopOf="@+id/card4"/>
    <ImageView
            android:layout_width="80dp"
            android:layout_height="100dp" android:id="@+id/card2"
            app:layout_constraintStart_toEndOf="@+id/card1"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/card3"
            app:layout_constraintTop_toTopOf="@+id/card1"/>
    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@android:drawable/ic_menu_delete"
            android:id="@+id/del_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/card5"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.499"
            app:layout_constraintVertical_bias="0.294" android:src="@android:drawable/ic_menu_delete"
    />
    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@android:drawable/checkbox_on_background"
            android:id="@+id/change"
            app:layout_constraintBottom_toBottomOf="@+id/del_button"
            app:layout_constraintTop_toTopOf="@+id/del_button"
            app:layout_constraintStart_toEndOf="@+id/undo"
            app:layout_constraintEnd_toEndOf="parent"/>
    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/undo" app:srcCompat="@drawable/ic_undo_24px"
            app:layout_constraintTop_toTopOf="@+id/del_button"
            app:layout_constraintBottom_toBottomOf="@+id/del_button"
            app:layout_constraintStart_toEndOf="@+id/del_button"
            app:layout_constraintVertical_bias="0.0" app:layout_constraintEnd_toStartOf="@+id/change"
    />
</androidx.constraintlayout.widget.ConstraintLayout>