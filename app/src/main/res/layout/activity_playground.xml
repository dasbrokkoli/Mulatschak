<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Playground"
        android:screenOrientation="landscape" android:background="#4CAF50" android:id="@+id/atout">

    <ImageView
            android:layout_width="45dp"
            android:layout_height="56dp" app:srcCompat="@drawable/settings" android:id="@+id/imageView2"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintVertical_bias="0.086"
            android:layout_marginEnd="16dp"/>
    <ImageView
            android:layout_width="56dp"
            android:layout_height="64dp" app:srcCompat="@drawable/question" android:id="@+id/imageView3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="16dp" android:layout_marginTop="20dp"/>
    <ImageView
            android:src="@android:drawable/editbox_dropdown_dark_frame"
            android:layout_width="200dp"
            android:layout_height="50dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:id="@+id/player2"
            app:layout_constraintTop_toTopOf="parent"/>
    <ImageView
            android:src="@android:drawable/editbox_dropdown_dark_frame"
            android:layout_width="35dp"
            android:layout_height="26dp" android:id="@+id/player1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView3" app:layout_constraintBottom_toBottomOf="parent"
    />
    <ImageView
            android:src="@android:drawable/editbox_dropdown_dark_frame"
            android:layout_width="35dp"
            android:layout_height="26dp" android:id="@+id/player3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView3" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="700dp" app:layout_constraintVertical_bias="0.465"/>
    <ImageView
            android:src="@drawable/empty"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:layout_constraintBottom_toBottomOf="parent" android:id="@+id/imageView6"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            android:layout_marginBottom="16dp"/>
    <TextView
            android:text="/"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:layout_constraintEnd_toEndOf="parent" android:id="@+id/pl1_announced"
            android:background="@drawable/empty" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="76dp" android:layout_marginEnd="576dp"/>
    <TextView
            android:text="/"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:layout_constraintEnd_toEndOf="parent" android:id="@+id/pl2_announced"
            android:background="@drawable/empty" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="272dp" android:layout_marginEnd="524dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>