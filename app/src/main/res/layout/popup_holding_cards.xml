<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="itp.project.popups.PopupHoldingCards">

    <ImageView
            android:layout_width="100dp"
            android:layout_height="120dp" app:srcCompat="@drawable/card_standard_backside"
            android:id="@+id/card5"
            app:layout_constraintTop_toTopOf="@+id/card1"
            app:layout_constraintStart_toEndOf="@+id/card4" android:layout_marginStart="16dp"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"/>
    <ImageView
            android:layout_width="100dp"
            android:layout_height="120dp" app:srcCompat="@drawable/card_standard_backside"
            android:id="@+id/card4"
            app:layout_constraintTop_toTopOf="@+id/card1"
            app:layout_constraintStart_toEndOf="@+id/card3" android:layout_marginStart="16dp"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/card5"/>
    <ImageView
            android:layout_width="100dp"
            android:layout_height="120dp" app:srcCompat="@drawable/card_standard_backside"
            android:id="@+id/card1" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/card2"
            app:layout_constraintHorizontal_chainStyle="packed"/>
    <ImageView
            android:layout_width="100dp"
            android:layout_height="120dp" app:srcCompat="@drawable/card_standard_backside"
            android:id="@+id/card2"
            app:layout_constraintTop_toTopOf="@+id/card1" app:layout_constraintStart_toEndOf="@+id/card1"
            android:layout_marginStart="16dp" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/card3"/>
    <ImageView
            android:layout_width="100dp"
            android:layout_height="120dp" app:srcCompat="@drawable/card_standard_backside"
            android:id="@+id/card3"
            app:layout_constraintTop_toTopOf="@+id/card1"
            app:layout_constraintStart_toEndOf="@+id/card2" android:layout_marginStart="16dp"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/card4"/>
    <TextView
            android:text="@string/yourcards"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView3"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toTopOf="@+id/card3"
            android:textSize="30sp"/>
    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/close" android:id="@+id/close"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp" android:layout_marginEnd="16dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>