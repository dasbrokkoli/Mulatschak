<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="itp.project.popups.PopupKartentausch"
        android:screenOrientation="landscape">

    <ImageView
            android:layout_width="56dp"
            android:layout_height="56dp" app:srcCompat="@drawable/eye" android:id="@+id/eyeBtn"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" android:layout_marginTop="16dp"/>
    <TextView
            android:text="@string/change"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/changecards"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="16dp" android:textSize="30sp"/>
    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@android:drawable/checkbox_on_background"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="16dp" android:id="@+id/change"/>
    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/undo" app:srcCompat="@drawable/ic_undo_24px"
            app:layout_constraintStart_toEndOf="@+id/delete"
            app:layout_constraintEnd_toStartOf="@+id/change" app:layout_constraintHorizontal_bias="0.25"
            app:layout_constraintBottom_toBottomOf="@+id/delete" android:layout_marginBottom="5dp"/>
    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@android:drawable/ic_menu_delete"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/delete" android:layout_marginBottom="16dp"/>
    <ImageView
            android:layout_width="100dp"
            android:layout_height="120sp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/card1" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/card2"/>
    <ImageView
            android:layout_width="100dp"
            android:layout_height="120dp"
            android:id="@+id/card2"
            app:layout_constraintTop_toTopOf="@+id/card1" app:layout_constraintStart_toEndOf="@+id/card1"
            android:layout_marginStart="16dp" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/card3"/>
    <ImageView
            android:layout_width="100dp"
            android:layout_height="120dp"
            android:id="@+id/card3"
            app:layout_constraintTop_toTopOf="@+id/card1" app:layout_constraintStart_toEndOf="@+id/card2"
            android:layout_marginStart="16dp" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/card4"/>
    <ImageView
            android:layout_width="100dp"
            android:layout_height="120dp"
            android:id="@+id/card4"
            app:layout_constraintTop_toTopOf="@+id/card1" app:layout_constraintStart_toEndOf="@+id/card3"
            android:layout_marginStart="16dp" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/card5"/>
    <ImageView
            android:layout_width="100dp"
            android:layout_height="120dp"
            android:id="@+id/card5"
            app:layout_constraintTop_toTopOf="@+id/card1" app:layout_constraintStart_toEndOf="@+id/card4"
            android:layout_marginStart="16dp" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>